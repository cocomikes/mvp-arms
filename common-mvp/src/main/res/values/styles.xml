<resources>

    <!--Suggest use BaseDialogFragmentStyle-->
    <style name="BaseDialogStyle" parent="AlertDialog.AppCompat.Light">
        <item name="android:windowFrame">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/DialogFromBottomAnim</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="BaseDialogFragmentStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@android:style/Theme.Dialog</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DialogFromBottomAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/cbase__slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/cbase__slide_out_to_bottom</item>
    </style>

    <style name="DialogFromAlphaAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/cbase__alpha_in_activity</item>
        <item name="android:windowExitAnimation">@anim/cbase__alpha_out_activity</item>
    </style>
</resources>
